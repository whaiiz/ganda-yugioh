@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<link rel="stylesheet" href="/css/login.css" />

<div class="form-container">
    <div class="inputs-container">
        <form id="account" method="post">
            <h4 id="form-title" class="mb-3">Login</h4>
            <div class="form-group">
                <label asp-for="Input.Email">Email</label>
                <input asp-for="Input.Email" id="email-input" type="text" class="form-control" placeholder="Email" />
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">Password</label>
                <input asp-for="Input.Password" id="password-input" type="password" class="form-control" placeholder="Password" />
            </div>
            <button id="submit-btn" type="submit" class="btn btn-primary mb-3 mt-3">Login</button>
            <a id="register-now" asp-area="Identity" asp-page="/Account/Register">No account? Register now</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
