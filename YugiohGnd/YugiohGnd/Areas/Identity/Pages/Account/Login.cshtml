@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<link rel="stylesheet" href="/css/login.css" />

<div class="form-container">
    <div id="login-container">
        <label for="email-input">Username</label>
        <input id="email-input" type="text" class="form-control" placeholder="Email" /> <br />

        <div class="form-group">
            <label for="password-input">Password</label>
            <input id="password-input" type="text" class="form-control" placeholder="Password" />
        </div>
        <br />
        <button id="login-btn" type="submit" class="btn btn-primary">Login</button> <br /> <br />
        <a id="register-now" href="#">No account? Register now</a>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
